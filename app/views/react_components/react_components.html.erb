<h1>React Components</h1>

<p>This page provides demonstrations of the React components available in Archelon.</p>

<%= form_with do %>
  <h2>PlainLiteral</h2>

  <div class="form-group">
    <%= react_component(
          "PlainLiteral", {
          paramPrefix: 'plain_literal',
          name: 'title',
          value: {
            '@value': "Lorem ipsum",
            '@language': "en"
          }
        }) %>
  </div>

  <h2>TypedLiteral</h2>

  <div>Hover the mouse over the textbox to display a tooltip with the datatype.</div>

  <div class="form-group">
    <%= react_component(
          "TypedLiteral", {
          paramPrefix: 'typed_literal',
          name: 'title',
          value: {
            '@value': "2020-06-23",
            '@type': "http://id.loc.gov/datatypes/edtf"
          }
        }) %>
  </div>

  <h2>ControlledURIRef</h2>

  <div>This component presents a dropdown using the values defined in the
    <%= link_to 'controlled vocabularies', vocabularies_url %>.</div>

  <% Vocabulary.all.each do |vocab| %>
    <h3><%= vocab.identifier %></h3>
    <div class="form-group">
      <%=
        react_component(
          "ControlledURIRef", {
          paramPrefix: 'controlled_value',
          name: vocab.identifier,
          vocab: vocab.as_hash,
          value: { '@id': vocab.terms[0].uri }
        }
        )
      %>
    </div>
  <% end %>

  <h2>URIRef</h2>

  <div>This component presents as a simple textbox</div>

  <div class="form-group">
    <%= react_component(:URIRef, { paramPrefix: 'uri_ref', name: 'title', value: { "@id": "http://example.com/vocab#bar"} }) %>
  </div>

  <h2>Repeatable</h2>

  <h3>Repeatable PlainLiteral</h3>

  <div>The following example is limited to 5 entries:</div>

  <div class="form-group">
    <%= react_component(
          :Repeatable,
          {
            maxValues: 5,
            componentType: :PlainLiteral,
            paramPrefix: "repeatable_plain_literal",
            name: 'title',
            values: [
              {'@value': 'First Line', '@language': 'en'},
              {'@value': '二行目', '@language': 'ja'},
              {'@value': 'Third Line', '@language': 'en'}]
          }
        ) %>
  </div>

  <h3>Repeatable TypedLiteral</h3>

  <div>The following example has unlimited entries:</div>

  <div class="form-group">
    <%= react_component(
          :Repeatable,
          {
            componentType: :TypedLiteral,
            paramPrefix: "repeatable_typed_literal",
            defaultValue: { '@value': '', '@type': 'http://id.loc.gov/datatypes/edtf' },
            name: 'title',
            values: [
              {'@value': '2020-06-23', '@type': 'http://id.loc.gov/datatypes/edtf'},
              {'@value': '1856-03-06', '@type': 'http://www.w3.org/2001/XMLSchema#date'}
            ]
          }
        ) %>
  </div>

  <h3>Repeatable ControlledURIRef</h3>

  <% Vocabulary.all.each do |vocab| %>
    <h4><%= vocab.identifier %> (repeated)</h4>
    <div class="form-group">
      <%= react_component(
            :Repeatable,
            {
              componentType: :ControlledURIRef,
              paramPrefix: 'repeated_controlled_value',
              name: vocab.identifier,
              vocab: vocab.as_hash,
              values: [
                { '@id': vocab.terms[0].uri }
              ],
              defaultValue: { '@id': '' }
            }
          )
      %>
    </div>
  <% end %>

  <h3>Repeatable URIRef</h3>

   <div class="form-group">
      <%= react_component(
            :Repeatable,
            {
              componentType: :URIRef,
              paramPrefix: 'repeatable_uri_ref',
              name: 'title',
              values: [
                { '@id': "http://example.com/vocab#bar" }
              ],
              defaultValue: { '@id': ''}
            }
          )
      %>
    </div>

  <div class="form-group">
    <input type="submit" name="submit" value="Submit" class="btn btn-primary form-control" />
  </div>
<% end %>

